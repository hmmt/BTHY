<?xml version="1.0" encoding="utf-8" ?>
<crature>
  <!--
    info - 관찰 레벨과는 관련 없는 정보들 ex)데미지, id, 이미지 소스 등
    
    observe - 관찰 정도에 따라 제공되는 정보들
              각 정보들에는 정보가 제공되는 레벨을 표기
              ex) <desc id="1" openLevel="1">"openLevel이 1일 때 이 정보가 제공됨"</desc>
              
              observe 노드 안의 level 은 관찰 단계의 갯수를 나타냄
  -->
  <info
    id =""
    observeLevel =""
    script=""
    >

    <feeling max="100" downProb="0.44" downValue="1">
      <section feelingValue="50" state="good" energy="0.5"/>
      <section feelingValue="30" state="normal" energy="0.3"/>
      <section feelingValue="0" state="bad" energy="-1.3"/>
    </feeling>

    <narration>

    </narration>

    <anim prefab="Unit/CreatureAnimator/MagicalGirlAnim" x="-1" y="-2"/>

    <!--<img src="Unit/creature/MatchGirl_01" x="-1" y="-1"/>-->
    <img src="Unit/dummy" x="-1" y="-1"/>
    <portrait src="Unit/creature/magicalGirl"/>
    <room src="Unit/creature/isolate_room"/>
    <frame src="Unit/creature/frame/MagicalGirl_frame"/>

    <graph>
      <node id="creature" x="-1.6" y="-1" type="creature"/>
      <node id="workspace" x="1.9" y="-1" type="workspace"/>

      <!--<node id="door"  x="2" y="-1" type="entry"/>-->
      <node id="outter" x="0" y="0" type="outterDoor"/>
      <node id="inner" x="2" y="-1" type="innerDoor"/>

      <!--<edge node1="workspace" node2="door" type="road" />-->
      <edge node1="workspace" node2="inner" type="road" />
      <edge node1="creature" node2="workspace" type="road" />
    </graph>
  </info>
  
  <observe level ="5">
    <collection>
      <codeNo openLevel ="0">0-01-04-H</codeNo>
      <portrait openLevel ="0"></portrait>
      <size openLevel ="0"></size>
      <weight openLevel ="0"></weight>

      <name openLevel ="1"></name>
      <attackType openLevel ="1"></attackType>
      <creatureType openLevel ="1"></creatureType>
      <horrorLevel openLevel ="1"></horrorLevel>

      <riskLevel openLevel ="2"></riskLevel>
      <intelligence openLevel ="2"></intelligence>
      <physical openLevel ="2"></physical>
      <mental openLevel ="2"></mental>

      <specialName openLevel ="3"></specialName>
      <specialInfo openLevel ="3"></specialInfo>
      <aggression openLevel ="3"></aggression>
      <gorgeous openLevel ="3"></gorgeous>
      
      <rejectWork openLevel ="4"></rejectWork>
      
      <preferWork openLevel ="5"></preferWork>
      <solution openLevel ="5"></solution>
      
    </collection>
    
    <desc id="1" openLevel="0">
      <!--
        외형설명
      -->
    </desc>

    <desc id="2" openLevel="1">
      <!--
        평소 상태
      -->
    </desc>

    <desc id="3" openLevel="2">
      <!--
        특수 상태
      -->
    </desc>

    <desc id="4" openLevel="3">
      <!--
        특수 상태
      -->
    </desc>

    <record openLevel="1">
      <!-- 관찰기록 -->
    </record>

    <record openLevel="2">
      <!-- 관찰기록 -->
    </record>

    <record openLevel="3">
      <!-- 관찰기록 -->
    </record>
    
  </observe>
</crature>